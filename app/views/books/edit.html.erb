<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title, placeholder: "title"%>
  <h3>Body</h3>
  <%= f.text_area :body, placeholder: "body"%>
  <%= f.submit "Update Book" %>
<% end %>
